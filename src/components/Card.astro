---
const { date, title, link } = Astro.props;
---

<li>
  <time
    >{
      date.toLocaleString("ja", {
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
      })
    }</time
  >
  <h2><a href={link}>{title}</a></h2>
</li>
<style>
  li {
    list-style: none;
    padding: 12px 20px;
    border-radius: 4px;
  }
  time {
    font-size: 12px;
  }
  h2 {
    font-size: 16px;
    margin: 0;
  }
  a {
    color: black;
  }
</style>
