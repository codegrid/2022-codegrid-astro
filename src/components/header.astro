---
import { HamburgerMenu } from "../components/hamburger-menu.jsx";
import { CSS_SPACING_PX8, CSS_SPACING_PX12 } from "../constants.js";
const title = Astro.props.title;
const links = [
  { href: "/", label: "トップ" },
  { href: "/about", label: "アバウト" },
  { href: "/contact", label: "お問合せ" },
];
---

<nav class='header'>
  <h1>{title}</h1>
  <ul class='links'>
    {
      links.map((link) => (
        <li>
          <a href={link.href}>{link.label}</a>
        </li>
      ))
    }
  </ul>
  <div class='hamburgerMenu'>
    <HamburgerMenu links={links} client:visible />
  </div>
</nav>
<style define:vars={{ CSS_SPACING_PX8, CSS_SPACING_PX12 }}>
  .header {
    background-color: blanchedalmond;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--CSS_SPACING_PX8);
  }
  .links {
    display: flex;
    gap: var(--CSS_SPACING_PX12);
    list-style: none;
  }
  .hamburgerMenu {
    display: none;
  }
  @media screen and (max-width: 768px) {
    .hamburgerMenu {
      display: block;
    }
    .links {
      display: none;
    }
  }
</style>
